{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "lib": ["es5", "es6", "dom"],
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jquery", "bootstrap", "knockout", "jasmine"]
  },
  "include": [
    "*.ts",
    "module/*.ts",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
